{
  "name": "cubby-logic-remote",
  "version": "1.2.1",
  "description": "Cubby Logic Remote - Articulation controller for Logic Pro",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --port 7100",
    "build": "next build",
    "start": "next start",
    "midi-server": "node midi-server.js",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:7100 && electron .\"",
    "electron:build": "next build && npx electron-builder",
    "electron:build:mac": "next build && npx electron-builder --mac --x64 --arm64"
  },
  "dependencies": {
    "jzz": "^1.8.6",
    "midi": "^2.0.0",
    "next": "^14.0.4",
    "plist": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/ws": "^8.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "28.3.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  }
}
